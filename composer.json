{
    "name":"netzmacht/contao-font-awesome",
    "description":"Integrates Font Awesome into Contao frontend and backend",
    "keywords":["icons", "fontawesome", "icon font"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Project leader"
        }
    ],
    "require":{
        "php":">=5.3",
        "contao/core":">=3.0",
        "FortAwesome/Font-Awesome":">=3.2.0"
    },
    "autoload":{
        "classmap":["src/"]
    },
    "replace": {
        "contao-legacy/font-awesome": "*"
    },
    "suggest": {
        "netzmacht/contao-bootstrap": "Integrates Bootstrap into Contao supporting FontAwesome"
    },
    "extra":{
        "contao": {
            "symlinks":{
                "src/system/modules/font-awesome": "system/modules/font-awesome",
                "../../fortawesome/font-awesome": "assets/font-awesome"
            },
            "runonce":[
                "system/modules/font-awesome/config/runonce.php"
            ]
        }
    }
}