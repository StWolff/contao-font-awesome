{
    "name":"netzmacht/contao-font-awesome",
    "description":"Integrates Font Awesome into Contao frontend and backend",
    "keywords":["icons", "fontawesome", "icon font"],
    "type":"contao-module",
    "license":"LGPL-3.0+",
    "authors":[
        {
            "name":"David Molineus",
            "email":"mail@netzmacht.de",
            "homepage":"http://www.netzmacht.de",
            "role":"Project leader"
        }
    ],
    "require":{
        "php":">=5.3",
        "contao/core":"~3.1",
        "contao-community-alliance/composer-plugin":"~2.2",
        "bit3/contao-meta-palettes": ">=1.4.3,<2.0",
        "components/font-awesome":"~4.1.0"
    },
    "autoload":{
        "psr-0": { "Netzmacht\\FontAwesome\\": "src/" }
    },
    "replace": {
        "contao-legacy/font-awesome": "*"
    },
    "suggest": {
        "netzmacht/contao-bootstrap": "Integrates Bootstrap into Contao supporting FontAwesome"
    },
    "extra":{
        "contao": {
            "sources":{
                "module": "system/modules/font-awesome"
            }
        }
    }
}
